{

  "manifest_version": 2,
  "name": "Radio Paradise player",
  "version": "0.2.0.0",
  "minimum_chrome_version": "22",

  "description": "Chrome extension to easily listen Radio Paradise stream",
  "icons": {
    "64": "images/logo-64x64.png"
  },

  "browser_action": {
    "default_icon": "images/logo-64x64.png",
    "default_title": "Radio Paradise",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://radioparadise.com/*",
    "storage"
  ],

  "background": {
    "scripts": [
      "js/streams.js",
      "js/storage.js",
      "js/background.js"
    ],
    "persistent": false
  },

  "short_name": "RP player",

  "homepage_url": "http://www.radioparadise.com/",
  "author": "Alexey Michurin <a.michurin@gmail.com>"

}
