{

  "manifest_version": 2,
  "name": "Radio Paradise player",
  "version": "0.20.0.1",
  "minimum_chrome_version": "26",

  "description": "Radio Paradise: commercial-free DJ-mixed flow of modern & classic rock, world music, electronica, and more",
  "icons": {
    "128": "images/logo-128x128.png",
    "64": "images/logo-64x64.png",
    "48": "images/logo-48x48.png",
    "38": "images/logo-38x38.png",
    "19": "images/logo-19x19.png",
    "16": "images/logo-16x16.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/logo-19x19.png",
      "38": "images/logo-38x38.png"
    },
    "default_title": "Radio Paradise",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://radioparadise.com/ajax_xml_song_info.php",
    "activeTab",
    "storage",
    "alarms"
  ],

  "optional_permissions": [],

  "background": {
    "scripts": [
      "js/peso.js",
      "js/audio_ctl.js",
      "js/streams.js",
      "js/storage.js",
      "js/background.js",
      "js/dom_keeper.js",
      "js/alarms.js",
      "js/volume_ctl.js"
    ],
    "persistent": false
  },

  "options_page": "options.html",

  "commands": {
    "toggle-sound": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle sound on/off"
    },
    "volume-lower": {
      "description": "Lower sound volume"
    },
    "volume-raise": {
      "description": "Raise sound volume"
    }
  },

  "offline_enabled": false,

  "short_name": "RP player",

  "homepage_url": "http://www.radioparadise.com/",
  "author": "Alexey Michurin <a.michurin@gmail.com>"

}
