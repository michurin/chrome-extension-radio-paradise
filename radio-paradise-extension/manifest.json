{

  "manifest_version": 2,
  "name": "Radio Paradise player",
  "version": "0.19.1.0",
  "minimum_chrome_version": "25",

  "description": "Chrome extension to listen to Radio Paradise online",
  "icons": {
    "128": "images/logo-128x128.png",
    "64": "images/logo-64x64.png",
    "48": "images/logo-48x48.png",
    "38": "images/logo-38x38.png",
    "19": "images/logo-19x19.png",
    "16": "images/logo-16x16.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/logo-19x19.png",
      "38": "images/logo-38x38.png"
    },
    "default_title": "Radio Paradise",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://radioparadise.com/ajax_xml_song_info.php",
    "activeTab",
    "storage",
    "alarms"
  ],

  "optional_permissions": [],

  "background": {
    "scripts": [
      "js/peso.js",
      "js/audio_ctl.js",
      "js/streams.js",
      "js/storage.js",
      "js/background.js",
      "js/dom_keeper.js",
      "js/alarms.js"
    ],
    "persistent": false
  },

  "options_page": "options.html",

  "offline_enabled": false,

  "short_name": "RP player",

  "homepage_url": "http://www.radioparadise.com/",
  "author": "Alexey Michurin <a.michurin@gmail.com>"

}
